@import "./styles/iconfont.wxss";

page,view,text,swiper,swiper-item,image,navigator{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/*  
* 主题颜色 通过变量来实现 
* less中存在变量
* 原生的css和wxss也是支持  变量
*/
page{
  /* 定义主题颜色 */
  --themeColor:#d6e6f2;
  /* 定义统一的字体大小 假设设计稿大小是 375px 
  1px=2rpx；
  14px=28rpx
  */
  font-size: 28rpx;
}

